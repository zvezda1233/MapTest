<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.maptest.ProfileActiivity"
    android:background="#586E3E"
    android:id="@+id/Profile">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="208dp"
        android:layout_height="225dp"
        android:layout_marginStart="101dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="102dp"
        android:background="#DEE1F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />


    <TextView
        android:id="@+id/user_email_profile"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="User E-mail"
        android:inputType="textPersonName"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints,TextFields,TextViewEdits" />
</androidx.constraintlayout.widget.ConstraintLayout>